<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fee4d5"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/mImgBg"
        android:layout_width="564dp"
        android:layout_height="882dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/main_image" />

    <TextView
        android:id="@+id/mTvText"
        android:layout_width="0dp"
        android:layout_height="103dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="24dp"
        android:text="Find yourself the best home away from home"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/mBtnGetstarted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvTitle" />

    <TextView
        android:id="@+id/mTvTitle"
        android:layout_width="0dp"
        android:layout_height="104dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="186dp"
        android:text="Welcome to AIR HOME"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mBtnGetstarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="39dp"
        android:backgroundTint="#C32317"
        android:text="Get Started"
        app:layout_constraintBottom_toBottomOf="@+id/mTvText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mTvText"
        app:layout_constraintTop_toBottomOf="@+id/mTvText" />

    <ImageView
        android:id="@+id/mLogo"
        android:layout_width="133dp"
        android:layout_height="130dp"
        android:layout_marginTop="61dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo2" />

    <Button
        android:id="@+id/mBtnLoginHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#43A047"
        android:text="Login"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/mTvText"
        app:layout_constraintStart_toStartOf="@+id/mTvText"
        app:layout_constraintTop_toBottomOf="@+id/mTvText" />

</androidx.constraintlayout.widget.ConstraintLayout>